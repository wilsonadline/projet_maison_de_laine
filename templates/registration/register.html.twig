{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="d-flex justify-content-evenly mt-5">
        <img src="{{ asset ('images/register-pexels-amina-filkins-5414061.jpg')}}" class="rounded-3 mt-5 col-3"  style="height : 500px ; width : 40%">
        <div style="width : 50%" class="mt-1 "> 
            <h1 class="text-center mt-4">Inscription</h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.password.first, {
                    label: 'Mot de passe'
                }) }}
                 {{ form_row(registrationForm.password.second, {
                    label: 'Confirmer le mot de passe'
                }) }}
            <div class="d-flex justify-content-end">
                    <button type="submit" class="btn border-dark">Enregistrer</button>
            </div>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}

