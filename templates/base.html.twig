<!DOCTYPE html>
<html>
<head>
  <!-- les styles sheets -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous"/>
  <link rel="stylesheet" href="{{asset ('../css/base.css ')}}" />
  {% block css %} {% endblock %} 
  <!-- pour les glyphicon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
  <!-- google font Pacifico -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap" rel="stylesheet">
  <!-- afin que la lecture de la page soit lisible pour tous les navigateur  -->
  <meta charset="utf-8" />
  <title>{% block title %} BASE {% endblock %}</title>
  <!-- <title>La Maison De Laine | Mercerie | Laines | Boutons | Rubanerie</title> -->
</head>
    <body>
{% block nav %}
    <nav   class="navbar navbar-expand-lg navbar-light bg-light" >
        <a href="{{ path ('app_home') }}"><img src="{{ asset('images/LOGO.png') }}" id="logo" /></a> 
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 ">
                <li class="nav-item ms-5">
                    <i class="fas fa-home mb-1"></i>
                    <a class="active" aria-current="page" href="{{ path ('app_home') }}">Boutique</a>
                </li>
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN')%}
                        <div class=" nav-item ms-5 dropdown">
                            <i class="fas fa-user mb-1"></i>
                            <a class=" dropdown-toggle" type="button" id="gestionDesStocks" data-bs-toggle="dropdown" aria-expanded="false">
                                Gestion des stocks
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="gestionDesStocks">
                                <li><a class="dropdown-item" href="{{path ("articles_list")}}">Articles</a></li>
                                <li><a class="dropdown-item" href="{{ path ('categories_list')}}">Catégories</a></li>
                                <li><a class="dropdown-item" href="{{path ('type_categories_list')}}">Types de Catégories</a></li>
                            </ul>
                        </div>
                        <div class=" nav-item ms-5 dropdown">
                            <i class="fas fa-user mb-1"></i>
                            <a class=" dropdown-toggle" type="button" id="gestionDesCommandes" data-bs-toggle="dropdown" aria-expanded="false">
                                Gestion des commandes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="gestionDesCommandes">
                                <li><a class="dropdown-item" href="#">Nouvelle commande</a></li>
                                <li><a class="dropdown-item" href="#">Commande en attente</a></li>
                                <li><a class="dropdown-item" href="#">Commande livré</a></li>
                                <li><a class="dropdown-item" href="#">Retour client</a></li>
                            </ul>
                        </div>
                    {# {{dump(app.user.role)}} #} 
                        {# {% endif %} #}

                     {% elseif is_granted('ROLE_USER') %}
                        <li class="nav-item ms-5">
                            <i class="fas fa-shopping-basket mb-1"></i>
                            <a href="{{path ("panier_index")}}">Panier</a>
                        </li>
                        <li class="nav-item ms-5">
                            <i class="fas fa-user mb-1"></i>
                            <a href="{{ path ('contact')}}">Contact</a>
                        </li>
                    {% endif %}
                     <li class="nav-item ms-5" data-bs-toggle="modal" data-bs-target="#navInscription">
                            <i class="fas fa-address-book mb-1"></i>
                            <a href="{{ path ('app_profil')}}">Mon profil</a>
                        </li>
                        <li class="nav-item ms-5" data-bs-toggle="modal" data-bs-target="#navInscription">
                            <i class="fas fa-address-book mb-1"></i>
                            <a href="{{path ('app_logout')}}">Deconnexion</a>
                        </li>
                        {% else %}
                         <li class="nav-item ms-5">
                            <i class="fas fa-shopping-basket mb-1"></i>
                            <a href="{{path ("panier_index")}}">Panier</a>
                        </li>
                        <li class="nav-item ms-5">
                            <i class="fas fa-user mb-1"></i>
                            <a href="{{ path ('contact')}}">Contact</a>
                        </li>
                        <li class="nav-item ms-5" data-bs-toggle="modal" data-bs-target="#navInscription">
                            <i class="fas fa-address-book mb-1"></i>
                            <a href="{{path ('app_register')}}">S'inscrire</a>
                        </li>
                        <li class="nav-item ms-5" data-bs-toggle="modal" data-bs-target="#navConnecter">
                            <i class="fas fa-power-off mb-1"></i>
                            <a href="{{path ('app_login')}}">Se Connecter</a>
                        </li>
   
                {% endif %}
            </ul>
        </div>
    </nav>
{% endblock %}

<div class="container" >
{% block body %}
{% endblock %}
</div>

{% block footer %}
    <footer>
        <article id="icon">
            <a href="https://www.facebook.com/"><i class="fab fa-facebook-square fa-2x"></i></a>
            <a href="https://www.instagram.com/?hl=fr"><i class="fab fa-instagram-square fa-2x"></i></a>
            <a href="https://www.linkedin.com/"><i class="fab fa-linkedin fa-2x"></i></a>
        </article>
        <article class="mb-3">
            <a  href="#"  id="copyright"> Copyright © 2021 </a> <span class="pipe"> |</span> 
            <a  id="copyright" href="#"> La Maison de Laine</a>  <span class="pipe"> |</span> 
            <a href="{{path ('mentions_legales')}}"  id="copyright"> Mentions Légales</a>  
        </article>
    </footer>
{% endblock %}
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="{{ asset ('js/prepa.js') }}"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
    <script src="{{ asset ('js/livraison.js') }}"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="{{ asset ('js/paiement.js')}}"></script>
    {% block script %} {% endblock %}
  </body>
</html>
