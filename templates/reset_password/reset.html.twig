{% extends 'base.html.twig' %}
{% form_theme resetForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Réinitialiser votre mot de passe | La Maison de Laine{% endblock %}

{% block body %}
    <div style ="width: 70%" class="d-flex justify-content-center flex-column">
        <h1 class="my-5">Réinitialiser votre mot de passe</h1>
        <div >
            {{form_start(resetForm)}}
                {{form_row(resetForm.plainPassword)}}
                <div class="d-flex justify-content-end">
                    <button class="btn btn-light" style="width: auto !important">Réinitialiser</button>
                </div>
            {{form_end(resetForm)}}
        </div>
    </div>
{% endblock %}
