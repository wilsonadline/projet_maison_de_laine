{% extends 'base.html.twig' %}
{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="d-flex justify-content-evenly my-5">
    <img class="mt-5" src="{{asset("images/opps_418Jmnejj8L._AC_.jpg")}}" alt="">
    <div class="mt-5">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1>Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrer votre email
                </small>
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn border border-dark">Réinitialiser</button>
            </div>
        {{ form_end(requestForm) }}
    </div>
</div>

{% endblock %}
{% block footer %}
    {# Footer  #}
