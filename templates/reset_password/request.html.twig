{% extends 'base.html.twig' %}
{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Réinitialiser votre mot de passe | La Maison de Laine{% endblock %}

{% block body %}
    <div class="row m-0">
        <h1 class="text-center my-5">Réinitialiser votre mot de passe</h1>
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger mt-5" role="alert">{{flashError}}</div>
        {% endfor %}
        <div class="d-flex mb-5 justify-content-center justify-content-xxl-between justify-content-xl-between">
            <img class="p-0 rounded-3 col-xl-5 col-sm-6 col-12 d-none d-md-none d-xl-block d-xxl-block" src="{{asset ("images/la_maison_de_laine_opps_418Jmnejj8L._AC_.jpg")}}" alt="Image Réinitialisation de mot de passe | La Maison de Laine | Rubanerie | Tricot | Laine | Mercerie | Saree | Wax | Kimono">
            <div class="d-flex flex-column col-xl-6 col-md-9 col-12">
                {{form_start(requestForm)}}
                    {{form_row(requestForm.email)}}
                    <div>
                        <small>
                            Entrer votre email
                        </small>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-light" style="width: auto !important">Réinitialiser</button>
                    </div>
                {{form_end(requestForm)}}
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <div class="container-fluid p-0 m-0 col-12">
        <footer class="col-12 p-0">
            <article id="icon">
                <a href="https://www.facebook.com/"><i class="fab fa-facebook-square fa-2x"></i></a>
                <a href="https://www.instagram.com/?hl=fr"><i class="fab fa-instagram-square fa-2x"></i></a>
                <a href="https://www.linkedin.com/"><i class="fab fa-linkedin fa-2x"></i></a>
            </article>
            <article class="mb-3 d-flex">
                <a class="text-center m-2" href="#" id="copyright">Copyright © 2021</a><span class="pipe mt-4">|</span> 
                <a  class="text-center m-2" id="copyright" href="#">La Maison de Laine</a><span class="pipe mt-4">|</span> 
                <a class="text-center m-2" href="{{path ('mentions_legales')}}" id="copyright">Mentions Légales</a> <span class="pipe mt-4">|</span>
                <a class="text-center m-2" href="{{path ('ccv')}}" id="copyright">CCV</a>  
            </article>
        </footer>
    </div>
{% endblock %}