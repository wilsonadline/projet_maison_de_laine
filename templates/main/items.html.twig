{% extends 'base.html.twig' %}
{% block title %} Items | La Maison de Laine{% endblock %}

{% block body %}
    {% for produit in article %}
        <section class="m-5 d-flex justify-content-center align-items-center justify-content-evenly">
            <img src="{{vich_uploader_asset(produit, 'imageFile')}}" class="card-img-top" style="height: 30rem ; width : 30rem" alt="Image de l'article | La Maison de Laine | Rubanerie | Tricot | Laine | Mercerie | Saree | Wax | Kimono">
            <div>
                <h1 class="text-end me-5 pe-5 ">{{produit.article}}</h1>
                <div class="card" style="width: 18rem; border : none !important">
                    <p class="card-text">{{produit.couleur }}</p>
                    <p class="card-text">{{produit.description }}</p>
                    <p class="card-text" style="font-weight : 900 !important">{{produit.prix }}â‚¬</p>
                    <a style="width : auto !important" href="{{path ("panier_ajout", {id : produit.id})}}" class="btn btn-sm btn-light mb-4"><i class="fas fa-cart-arrow-down mx-3"></i>Ajouter au panier</a>
                </div>
            </div>
        </section>
    {% endfor %} 
    <div class="d-flex justify-content-start mb-2">
        <a href="{{path ('app_home')}}" class="btn btn-sm btn-light">Home</a>
    </div>
{% endblock %}