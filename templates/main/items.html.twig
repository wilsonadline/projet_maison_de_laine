{% extends 'base.html.twig' %}
{% block title %} Items | La Maison de Laine | Rubanerie | Tricot | Laine | Mercerie | Saree | Wax | Kimono{% endblock %}

{% block body %}

    {% for produit in article %}
<section class = "m-5 d-flex justify-content-center align-items-center flex-column ">
                <h1 class="mt-5">{{produit.article}}</h1>

        <div class="card m-5" style="width: 18rem;">
            <img src="{{ vich_uploader_asset(produit, 'imageFile')}}" class="card-img-top" alt="Image de l'article | La Maison de Laine | Rubanerie | Tricot | Laine | Mercerie | Saree | Wax | Kimono">
            <div class="card-body d-flex justify-content-center flex-column">
                <h5 class="card-title">{{produit.article}}</h5>
                <p class="card-text text-center">{{produit.couleur}}</p>
                <p class="card-text text-center">{{produit.description}}.</p>
                <p class="card-text text-center">{{produit.prix }}â‚¬</p>
             </div>
            <div class = " d-flex justify-content-center">
                    <a href="{{path ("panier_ajout", {id : produit.id} )}}" class="btn btn-sm btn-light border mb-1"><i class="fas fa-cart-arrow-down mx-3"></i>Ajouter au panier</a>
            </div>
        </div>

</section>
    {% endfor %} 
    <div class = " d-flex justify-content-start ">
        <a href="{{path ('app_home')}}" class="btn btn-sm btn-light border">Home</a>
    </div>
{% endblock %}




